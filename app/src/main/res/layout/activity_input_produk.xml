<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.00000001dp"
        android:text="1"
        android:textSize="0.0000000001dp"
        android:id="@+id/tvIdTahunAjaran"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Nama Produk"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_rounded_transparent"
                                android:padding="1dp">

                                <EditText
                                    android:inputType="text"
                                    android:id="@+id/etNamaProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded"
                                    android:padding="5dp"
                                    android:theme="@style/AppThemeDeskripsi" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Deskripsi Produk"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_rounded_transparent"
                                android:padding="1dp">

                                <EditText
                                    android:inputType="text|textMultiLine"
                                    android:id="@+id/etDeskripsiProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded"
                                    android:padding="5dp"
                                    android:theme="@style/AppThemeDeskripsi" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Harga Produk"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_rounded_transparent"
                                android:padding="1dp">

                                <EditText
                                    android:inputType="number"
                                    android:id="@+id/etHargaProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded"
                                    android:padding="5dp"
                                    android:theme="@style/AppThemeDeskripsi" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Nomor Telpon pengurus"
                                android:textColor="@color/colorBlack" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_rounded_transparent"
                                android:padding="1dp">

                                <EditText
                                    android:inputType="text"
                                    android:id="@+id/etNomorTelpon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded"
                                    android:padding="5dp"
                                    android:theme="@style/AppThemeDeskripsi" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Cover Produk"
                                android:textColor="@color/colorBlack"
                                android:layout_marginBottom="10dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/linearCover">
                                <ImageView
                                    android:id="@+id/ivCoverProduk"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:visibility="gone" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Cover Produk"
                                    android:id="@+id/tvCover"
                                    android:gravity="center"
                                    android:textColor="@color/colorBlack"
                                    android:layout_marginBottom="10dp"
                                    android:visibility="gone"/>
                                <Button
                                    android:id="@+id/btnUpload"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_marginBottom="20dp"
                                    android:background="@drawable/btn_round_primary"
                                    android:text="Upload"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>

                            <!--Gambar 1-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/linearGambar1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Gambar Produk"
                                    android:textColor="@color/colorBlack" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp">
                                    <ImageView
                                        android:id="@+id/ivProduk1"
                                        android:layout_width="match_parent"
                                        android:layout_height="300dp"
                                        android:visibility="gone" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Nomor Telpon pengurus"
                                        android:textColor="@color/colorBlack"
                                        android:id="@+id/tvProduk1"
                                        android:gravity="center"
                                        android:visibility="gone"/>

                                    <Button
                                        android:id="@+id/btnUpload1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/btn_round_primary"
                                        android:text="Upload"
                                        android:textColor="@color/colorWhite" />


                                    <Button
                                        android:id="@+id/btnTambah1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:background="@drawable/btn_round_primary"
                                        android:text="Tambah"
                                        android:textColor="@color/colorWhite" />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Deskripsi Foto"
                                    android:textColor="@color/colorBlack" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded_transparent"
                                    android:padding="1dp">

                                    <EditText
                                        android:inputType="text"
                                        android:id="@+id/etDeskripsiFoto1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_rounded"
                                        android:padding="5dp"
                                        android:theme="@style/AppThemeDeskripsi" />
                                </LinearLayout>
                            </LinearLayout>

                            <!--Gambar 2-->
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/linearGambar2">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Gambar Produk"
                                    android:textColor="@color/colorBlack" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp">
                                    <ImageView
                                        android:id="@+id/ivProduk2"
                                        android:layout_width="match_parent"
                                        android:layout_height="300dp"
                                        android:visibility="gone" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center"
                                        android:text="Nomor Telpon pengurus"
                                        android:textColor="@color/colorBlack"
                                        android:id="@+id/tvProduk2"
                                        android:visibility="gone"/>

                                    <Button
                                        android:id="@+id/btnUpload2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/btn_round_primary"
                                        android:text="Upload"
                                        android:textColor="@color/colorWhite" />


                                    <Button
                                        android:id="@+id/btnTambah2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:background="@drawable/btn_round_primary"
                                        android:text="Tambah"
                                        android:textColor="@color/colorWhite" />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Deskripsi Foto"
                                    android:textColor="@color/colorBlack" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded_transparent"
                                    android:padding="1dp">

                                    <EditText
                                        android:inputType="text"
                                        android:id="@+id/etDeskripsiFoto2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_rounded"
                                        android:padding="5dp"
                                        android:theme="@style/AppThemeDeskripsi" />
                                </LinearLayout>
                            </LinearLayout>

                            <!--Gambar 3-->
                            <LinearLayout
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/linearGambar3">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="Gambar Produk"
                                    android:textColor="@color/colorBlack" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp">
                                    <ImageView
                                        android:id="@+id/ivProduk3"
                                        android:layout_width="match_parent"
                                        android:layout_height="300dp"
                                        android:visibility="gone" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Nomor Telpon pengurus"
                                        android:textColor="@color/colorBlack"
                                        android:id="@+id/tvProduk3"
                                        android:gravity="center"
                                        android:visibility="gone"/>

                                    <Button
                                        android:id="@+id/btnUpload3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/btn_round_primary"
                                        android:text="Upload"
                                        android:textColor="@color/colorWhite" />


                                    <Button
                                        android:id="@+id/btnTambah3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="50dp"
                                        android:layout_marginRight="50dp"
                                        android:background="@drawable/btn_round_primary"
                                        android:text="Tambah"
                                        android:textColor="@color/colorWhite" />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Deskripsi Foto"
                                    android:textColor="@color/colorBlack" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/btn_rounded_transparent"
                                    android:padding="1dp">

                                    <EditText
                                        android:inputType="text"
                                        android:id="@+id/etDeskripsiFoto3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/btn_rounded"
                                        android:padding="5dp"
                                        android:theme="@style/AppThemeDeskripsi" />
                                </LinearLayout>
                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2">

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="5dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/btn_round_primary"
                                            android:padding="1dp">

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/btn_rounded_white"
                                                android:text="Batal"
                                                android:id="@+id/btnBatal"
                                                android:textColor="@color/colorBlack" />
                                        </LinearLayout>

                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="5dp"
                                            android:layout_weight="1"
                                            android:background="@drawable/btn_round_primary"
                                            android:text="Simpan"
                                            android:id="@+id/btnSimpan"
                                            android:textColor="@color/colorWhite" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>