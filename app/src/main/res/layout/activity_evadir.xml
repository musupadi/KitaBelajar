<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitvity.menu.EvadirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apa Itu Evadir"
            android:textSize="@dimen/text_xtra_large"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/evadir"
            android:textSize="@dimen/text_xtra_large"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_transparent"
            android:padding="1dp">
            <EditText
                android:hint="Isi"
                android:theme="@style/AppThemeDeskripsi"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/etEvadir"
                android:textSize="@dimen/text_xtra_large"
                android:gravity="left|top"
                android:inputType="text|textMultiLine"
                android:background="@drawable/btn_rounded"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/relativeBatal">
                        <Button
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_round_primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Batal"
                            android:id="@+id/btnBatal"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/roboto"/>
                        <Button
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_rounded_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Batal"
                            android:id="@+id/btnBatal2"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/roboto"/>
                    </RelativeLayout>
                    <Button
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_primary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Submit"
                        android:id="@+id/btnSubmit"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>